{
    "manifest_version": 2,

    "name": "Kasette: Auto-Replay YouTube Videos",
    "description": "Chrome extension to put YouTube videos on replay",
    "version": "1.0.2",

    "browser_action": {
      "default_icon": "icons/browser_button.png",
      "default_popup": "index.html"
    },

    "author": "Linus Lee",
    "short_name": "Kasette",

    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },

    "permissions": [
      "activeTab"
    ]
}
